{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des recettes</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Préparation</th>
                <th>Cuisson</th>
                <th>Nb Personnes</th>
                <th>Difficulté</th>
                <th>Coût</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_show', { 'id': recipe.id }) }}">{{ recipe.id }}</a></td>
                <td>{{ recipe.preparationTime }}</td>
                <td>{{ recipe.cookTime }}</td>
                <td>{{ recipe.serving }}</td>
                <td>{{ recipe.difficultyLevel }}</td>
                <td>{{ recipe.cost }}</td>
                <td>{{ recipe.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recipe_show', { 'id': recipe.id }) }}"><i class="fas fa-info-circle"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}"><i class="fas fa-pencil-alt"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_new') }}"><i class="fas fa-plus"></i> Ajouter une nouvelle recette</a>
        </li>
    </ul>
{% endblock %}
