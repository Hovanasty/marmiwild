{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des recettes</h1>
    <a href="{{ path('recipe_new') }}"><i class="fas fa-plus"></i> Ajouter une nouvelle recette</a>

    <table class="table table-striped table-responsive-sm mt-5">
        <thead>
            <tr>
                <th>Recette</th>
                <th>Personnes</th>
                <th>Difficulté</th>
                <th>Coût</th>
                <th>Temps (min)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.serving }}</td>
                <td>{{ recipe.difficultyLevel.level }}</td>
                <td>{{ recipe.cost.cost }}</td>
                <td>{{ recipe.preparationTime + recipe.cookTime }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recipe_show', { 'id': recipe.id }) }}"><i class="fas fa-info-circle"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}"><i class="fas fa-pencil-alt"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
