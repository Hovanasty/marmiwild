{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des ingrédients disponibles ({{ ingredients|length }})</h1>
    <a href="{{ path('ingredient_new') }}" class="btn btn-success" title="Ajouter un nouvel ingrédient"><i class="fas fa-plus"></i> Ajouter un nouvel ingrédient</a>

    <table class="table table-striped table-responsive-sm mt-5">
        <thead>
            <tr>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ingredient_show', { 'id': ingredient.id }) }}" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('homepage') }}"><i class="fas fa-list"></i> Retour à la page d'accueil</a>
        </li>
    </ul>
{% endblock %}
