{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <h1>Liste des ingrédients</h1>
        <h2>Recette : {{ recipe.name }}</h2>
        <a href="{{ path('ingredients-recipe_new', {'recipe_id': recipe.id}) }}" class="btn btn-success" title="Ajouter un nouvel ingrédient à la recette"><i class="fas fa-plus"></i> Ajouter un nouvel ingrédient à la recette</a>

        <table class="table table-striped table-responsive-sm mt-5">
            <thead>
            <tr>
                <th>Ingrédient</th>
                <th>Quantité</th>
                <th>Unité</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for ingredientRecipe in ingredientRecipes %}
                <tr>
                    <td>{{ ingredientRecipe.ingredient.type }}</td>
                    <td>{{ ingredientRecipe.quantity }}</td>
                    <td>{{ ingredientRecipe.unity.unity }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('ingredients-recipe_show', { 'id': ingredientRecipe.id, 'recipe_id': recipe.id  }) }}" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                            </li>
                            <li>
                                <a href="{{ path('ingredients-recipe_edit', { 'id': ingredientRecipe.id, 'recipe_id': recipe.id  }) }}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>


{% endblock %}
